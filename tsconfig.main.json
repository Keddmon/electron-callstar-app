{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist/main",
        "rootDir": "src/main",
        "lib": ["ES2020", "DOM"], // ✅ 추가
        "strict": true,
        "skipLibCheck": true, // ✅ 추가(강력 추천)
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "types": ["node", "electron"]
    },
    "include": ["src/main/**/*"]
}

{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "src/main",
        "outDir": "dist/main",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noEmit": false,
        "types": ["node", "electron"]
    },
    "include": ["src/main/**/*"]
}
